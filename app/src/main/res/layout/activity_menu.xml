<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.gwmobile.metroexplorer.MenuActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/image_closest_station"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/dc1" />

        <Button
            android:id="@+id/btn_closest_station"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#AA000000"
            android:text="@string/btn_closest_station_txt"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ProgressBar
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_select_station"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:src="@drawable/dc2" />

        <Button
            android:id="@+id/btn_view_stations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#AA000000"
            android:text="@string/btn_view_stations_txt"
            android:textColor="#ffffffff" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/image_favorite_landmarks"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:src="@drawable/dc4" />

        <Button
            android:id="@+id/btn_view_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#AA000000"
            android:text="@string/btn_view_favorites_txt"
            android:textColor="#ffffffff" />

    </RelativeLayout>

</LinearLayout>

