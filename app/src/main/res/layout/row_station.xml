<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/station_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/station_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@android:color/black" />
            <LinearLayout
                android:id="@+id/metro_lines"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/station_name"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_red_line"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/red_line"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/image_blue_line"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blue_line"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/image_orange_line"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/orange_line"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/image_yellow_line"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/yellow_line"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/image_green_line"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/green_line"
                    android:visibility="gone"/>
                <ImageView
                    android:id="@+id/image_silver_line"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/silver_line"
                    android:visibility="gone"/>

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>